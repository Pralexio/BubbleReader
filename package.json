{
  "name": "bubblereader",
  "version": "1.0.0",
  "description": "Lecteur de mangas et manhwas",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start:server": "cd Server && npm run dev",
    "wait": "node wait-script.js",
    "start:client": "cd Client && npm start",
    "init:mangas": "cd Server && node ./utils/init-mangas.js",
    "dev": "concurrently \"npm run start:server\" \"npm run wait && npm run init:mangas\" \"npm run wait && npm run start:client\"",
    "simpledev": "npm run dev",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "build": "electron-builder --win",
    "seed": "cd Server && node utils/seeder.js"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "type": "commonjs",
  "devDependencies": {
    "concurrently": "^7.6.0",
    "electron": "^latest",
    "electron-builder": "^latest"
  },
  "dependencies": {
    // ... existing dependencies ...
  },
  "build": {
    "appId": "com.bubblereader.app",
    "productName": "BubbleReader",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/logo.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "BubbleReader"
    },
    "files": [
      "**/*",
      "!Server/**/*"
    ]
  }
}
